# Bachelor Mess Client Environment Configuration
# =============================================

# API Configuration
# ================
# Main API URL - Required for production
EXPO_PUBLIC_API_URL=http://192.168.0.130:3000/api

# API Timeout Settings
EXPO_PUBLIC_API_TIMEOUT=10000
EXPO_PUBLIC_API_MAX_RETRIES=3
EXPO_PUBLIC_API_RETRY_DELAY=1000

# Cache Configuration
EXPO_PUBLIC_CACHE_DURATION=300000

# Development Settings
# ===================
# Enable/disable development features
EXPO_PUBLIC_DEV_MODE=true
EXPO_PUBLIC_DEBUG_ENABLED=true

# Network Configuration
# ===================
# Enable offline mode
EXPO_PUBLIC_OFFLINE_MODE_ENABLED=false

# Authentication Settings
# =====================
# JWT token expiration (in seconds)
EXPO_PUBLIC_TOKEN_EXPIRY=86400

# App Configuration
# ================
# App version and build info
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_NAME=Bachelor Mess Client

# Feature Flags
# ============
# Enable/disable specific features
EXPO_PUBLIC_FEATURE_ANALYTICS=true
EXPO_PUBLIC_FEATURE_OFFLINE_STORAGE=true
EXPO_PUBLIC_FEATURE_PUSH_NOTIFICATIONS=false
EXPO_PUBLIC_FEATURE_HAPTIC_FEEDBACK=true

# UI/UX Settings
# ==============
# Theme and appearance
EXPO_PUBLIC_THEME_MODE=automatic
EXPO_PUBLIC_ENABLE_ANIMATIONS=true

# Error Handling
# =============
# Error reporting and logging
EXPO_PUBLIC_ERROR_REPORTING_ENABLED=false
EXPO_PUBLIC_LOG_LEVEL=info

# Security Settings
# ================
# SSL/TLS settings
EXPO_PUBLIC_SSL_VERIFY=true
EXPO_PUBLIC_ALLOW_INSECURE_HTTP=false

# Platform Specific
# ================
# iOS specific settings
EXPO_PUBLIC_IOS_SUPPORTS_TABLET=true

# Android specific settings
EXPO_PUBLIC_ANDROID_EDGE_TO_EDGE=true

# Web specific settings
EXPO_PUBLIC_WEB_BUNDLER=metro

# EAS Build Configuration
# ======================
# EAS project ID
EXPO_PUBLIC_EAS_PROJECT_ID=0850ee77-69fb-4327-ae50-ac114df75ae7

# Development Server Settings
# ==========================
# Local development server
EXPO_PUBLIC_DEV_SERVER_URL=http://localhost:3000
EXPO_PUBLIC_DEV_SERVER_PORT=3000

# Testing Configuration
# ====================
# Test environment settings
EXPO_PUBLIC_TEST_MODE=false
EXPO_PUBLIC_TEST_API_URL=http://localhost:3001/api

# Performance Settings
# ===================
# Performance optimization
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
EXPO_PUBLIC_ENABLE_MEMORY_OPTIMIZATION=true

# Localization
# ============
# Language and region settings
EXPO_PUBLIC_DEFAULT_LANGUAGE=en
EXPO_PUBLIC_DEFAULT_REGION=US

# Third-party Services (if needed)
# ===============================
# Add any third-party service API keys here
# EXPO_PUBLIC_ANALYTICS_KEY=your_analytics_key_here
# EXPO_PUBLIC_CRASH_REPORTING_KEY=your_crash_reporting_key_here 