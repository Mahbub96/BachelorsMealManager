# Bachelor Mess Client Environment Configuration
# =============================================
# This file contains all environment variables for the React Native/Expo client
# Copy this file to .env and update the values according to your environment

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Main API URL - Required for all environments
# Development: Use your local IP address or domain
# Production: Use your production domain
EXPO_PUBLIC_API_URL=https://mess.mahbub.dev

# API Timeout Settings (in milliseconds)
EXPO_PUBLIC_API_TIMEOUT=15000
EXPO_PUBLIC_API_MAX_RETRIES=3
EXPO_PUBLIC_API_RETRY_DELAY=1000

# API Rate Limiting
EXPO_PUBLIC_API_RATE_LIMIT=100
EXPO_PUBLIC_API_RATE_LIMIT_WINDOW=60000

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment Mode
EXPO_PUBLIC_ENV=development
EXPO_PUBLIC_DEV_MODE=true
EXPO_PUBLIC_DEBUG_ENABLED=true

# Build Configuration
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_NAME=Bachelor Mess Client
EXPO_PUBLIC_APP_BUILD_NUMBER=1

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core Features
EXPO_PUBLIC_FEATURE_AUTHENTICATION=true
EXPO_PUBLIC_FEATURE_MEAL_MANAGEMENT=true
EXPO_PUBLIC_FEATURE_BAZAR_MANAGEMENT=true
EXPO_PUBLIC_FEATURE_DASHBOARD=true
EXPO_PUBLIC_FEATURE_ANALYTICS=true
EXPO_PUBLIC_FEATURE_OFFLINE_STORAGE=true
EXPO_PUBLIC_FEATURE_PUSH_NOTIFICATIONS=false
EXPO_PUBLIC_FEATURE_HAPTIC_FEEDBACK=true
EXPO_PUBLIC_FEATURE_IMAGE_UPLOAD=true
EXPO_PUBLIC_FEATURE_FILE_PICKER=true

# Advanced Features
EXPO_PUBLIC_FEATURE_REAL_TIME_UPDATES=false
EXPO_PUBLIC_FEATURE_BACKGROUND_SYNC=false
EXPO_PUBLIC_FEATURE_CRASH_REPORTING=false
EXPO_PUBLIC_FEATURE_ANALYTICS_TRACKING=false

# =============================================================================
# NETWORK & CONNECTIVITY
# =============================================================================

# Network Configuration
EXPO_PUBLIC_OFFLINE_MODE_ENABLED=false
EXPO_PUBLIC_NETWORK_TIMEOUT=10000
EXPO_PUBLIC_NETWORK_RETRY_ATTEMPTS=3

# SSL/TLS Settings
EXPO_PUBLIC_SSL_VERIFY=true
EXPO_PUBLIC_ALLOW_INSECURE_HTTP=false
EXPO_PUBLIC_CERTIFICATE_PINNING=false

# =============================================================================
# CACHE & STORAGE
# =============================================================================

# Cache Configuration (in milliseconds)
EXPO_PUBLIC_CACHE_DURATION=300000
EXPO_PUBLIC_CACHE_MAX_SIZE=50
EXPO_PUBLIC_CACHE_CLEANUP_INTERVAL=3600000

# Offline Storage
EXPO_PUBLIC_OFFLINE_STORAGE_ENABLED=true
EXPO_PUBLIC_OFFLINE_SYNC_INTERVAL=300000
EXPO_PUBLIC_OFFLINE_MAX_ITEMS=1000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Token Settings
EXPO_PUBLIC_TOKEN_EXPIRY=86400
EXPO_PUBLIC_REFRESH_TOKEN_EXPIRY=604800
EXPO_PUBLIC_TOKEN_STORAGE_KEY=bachelor_mess_token
EXPO_PUBLIC_REFRESH_TOKEN_STORAGE_KEY=bachelor_mess_refresh_token

# Security Settings
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=false
EXPO_PUBLIC_ENABLE_PIN_AUTH=false
EXPO_PUBLIC_SESSION_TIMEOUT=3600000

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================

# Theme Settings
EXPO_PUBLIC_THEME_MODE=automatic
EXPO_PUBLIC_ENABLE_ANIMATIONS=true
EXPO_PUBLIC_ANIMATION_DURATION=300
EXPO_PUBLIC_ENABLE_HAPTIC_FEEDBACK=true

# UI Performance
EXPO_PUBLIC_ENABLE_LAZY_LOADING=true
EXPO_PUBLIC_ENABLE_VIRTUALIZATION=true
EXPO_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true

# =============================================================================
# ERROR HANDLING & LOGGING
# =============================================================================

# Error Reporting
EXPO_PUBLIC_ERROR_REPORTING_ENABLED=false
EXPO_PUBLIC_LOG_LEVEL=info
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# Debug Settings
EXPO_PUBLIC_ENABLE_DEBUG_MENU=true
EXPO_PUBLIC_ENABLE_NETWORK_LOGGING=true
EXPO_PUBLIC_ENABLE_API_LOGGING=true

# =============================================================================
# PLATFORM SPECIFIC SETTINGS
# =============================================================================

# iOS Settings
EXPO_PUBLIC_IOS_SUPPORTS_TABLET=true
EXPO_PUBLIC_IOS_ENABLE_BACKGROUND_APP_REFRESH=false
EXPO_PUBLIC_IOS_ENABLE_PUSH_NOTIFICATIONS=false

# Android Settings
EXPO_PUBLIC_ANDROID_EDGE_TO_EDGE=true
EXPO_PUBLIC_ANDROID_ENABLE_BACKGROUND_SYNC=false
EXPO_PUBLIC_ANDROID_ENABLE_WAKE_LOCK=false

# Web Settings
EXPO_PUBLIC_WEB_BUNDLER=metro
EXPO_PUBLIC_WEB_ENABLE_SERVICE_WORKER=false
EXPO_PUBLIC_WEB_ENABLE_PWA=false

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Server
EXPO_PUBLIC_DEV_SERVER_URL=http://localhost:3000
EXPO_PUBLIC_DEV_SERVER_PORT=3000
EXPO_PUBLIC_DEV_API_URL=http://192.168.0.130:3000/api

# Testing Configuration
EXPO_PUBLIC_TEST_MODE=false
EXPO_PUBLIC_TEST_API_URL=http://localhost:3001/api
EXPO_PUBLIC_ENABLE_MOCK_DATA=false

# Development Tools
EXPO_PUBLIC_ENABLE_REACT_DEVTOOLS=true
EXPO_PUBLIC_ENABLE_FLIPPER=false
EXPO_PUBLIC_ENABLE_METRO_LOGGING=true

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================

# Performance Settings
EXPO_PUBLIC_ENABLE_MEMORY_OPTIMIZATION=true
EXPO_PUBLIC_ENABLE_IMAGE_CACHING=true
EXPO_PUBLIC_ENABLE_BUNDLE_ANALYZER=false
EXPO_PUBLIC_ENABLE_PERFORMANCE_PROFILING=false

# Memory Management
EXPO_PUBLIC_MAX_CACHED_IMAGES=100
EXPO_PUBLIC_MAX_CACHED_RESPONSES=50
EXPO_PUBLIC_CLEANUP_INTERVAL=300000

# =============================================================================
# LOCALIZATION & INTERNATIONALIZATION
# =============================================================================

# Language Settings
EXPO_PUBLIC_DEFAULT_LANGUAGE=en
EXPO_PUBLIC_DEFAULT_REGION=US
EXPO_PUBLIC_SUPPORTED_LANGUAGES=en,bn
EXPO_PUBLIC_ENABLE_RTL_SUPPORT=false

# Date & Time
EXPO_PUBLIC_DEFAULT_TIMEZONE=Asia/Dhaka
EXPO_PUBLIC_DATE_FORMAT=DD/MM/YYYY
EXPO_PUBLIC_TIME_FORMAT=HH:mm

# =============================================================================
# EAS BUILD CONFIGURATION
# =============================================================================

# EAS Project Settings
EXPO_PUBLIC_EAS_PROJECT_ID=0850ee77-69fb-4327-ae50-ac114df75ae7
EXPO_PUBLIC_EAS_BUILD_PROFILE=development

# =============================================================================
# THIRD-PARTY SERVICES (Optional)
# =============================================================================

# Analytics Services (Optional - uncomment and configure as needed)
# EXPO_PUBLIC_ANALYTICS_KEY=your_analytics_key_here
# EXPO_PUBLIC_CRASH_REPORTING_KEY=your_crash_reporting_key_here
# EXPO_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here
# EXPO_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here

# Push Notification Services (Optional)
# EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id
# EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id

# =============================================================================
# BACKUP & SYNC SETTINGS
# =============================================================================

# Data Backup
EXPO_PUBLIC_ENABLE_AUTO_BACKUP=false
EXPO_PUBLIC_BACKUP_INTERVAL=86400000
EXPO_PUBLIC_MAX_BACKUP_SIZE=10485760

# Sync Settings
EXPO_PUBLIC_ENABLE_AUTO_SYNC=true
EXPO_PUBLIC_SYNC_INTERVAL=300000
EXPO_PUBLIC_SYNC_ON_APP_START=true

# =============================================================================
# MONITORING & METRICS
# =============================================================================

# App Monitoring
EXPO_PUBLIC_ENABLE_APP_MONITORING=false
EXPO_PUBLIC_MONITORING_SAMPLE_RATE=0.1
EXPO_PUBLIC_ENABLE_USER_ANALYTICS=false

# Performance Metrics
EXPO_PUBLIC_ENABLE_PERFORMANCE_METRICS=false
EXPO_PUBLIC_METRICS_COLLECTION_INTERVAL=60000

# =============================================================================
# SECURITY & PRIVACY
# =============================================================================

# Privacy Settings
EXPO_PUBLIC_ENABLE_DATA_COLLECTION=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false
EXPO_PUBLIC_ENABLE_USAGE_ANALYTICS=false

# Data Protection
EXPO_PUBLIC_ENABLE_DATA_ENCRYPTION=true
EXPO_PUBLIC_ENABLE_SECURE_STORAGE=true
EXPO_PUBLIC_ENABLE_KEYCHAIN_STORAGE=true

# =============================================================================
# CUSTOMIZATION & BRANDING
# =============================================================================

# App Branding
EXPO_PUBLIC_APP_PRIMARY_COLOR=#007AFF
EXPO_PUBLIC_APP_SECONDARY_COLOR=#5856D6
EXPO_PUBLIC_APP_ACCENT_COLOR=#FF9500

# Custom Features
EXPO_PUBLIC_ENABLE_CUSTOM_THEMES=false
EXPO_PUBLIC_ENABLE_DARK_MODE=true
EXPO_PUBLIC_ENABLE_CUSTOM_FONTS=false

# =============================================================================
# DEPRECATED SETTINGS (For backward compatibility)
# =============================================================================

# These settings are kept for backward compatibility
# They will be removed in future versions
EXPO_PUBLIC_LEGACY_API_SUPPORT=false
EXPO_PUBLIC_LEGACY_STORAGE_MODE=false 